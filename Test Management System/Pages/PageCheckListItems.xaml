        <StackPanel Grid.Row="3" Orientation="Horizontal">

        </StackPanel>

        <Label Grid.Row="4" Content="Вложения:" Margin="0, 10, 10, 10"/>
        <Button Template="{StaticResource beautifulButton}" Padding="10" Grid.Row="4" Width="250" Content="Прикрепить" Margin="10" Name="AddAttachmentToCheckList" HorizontalAlignment="Right" Click="AddAttachmentToCheckList_Click"/>-->

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Template="{StaticResource beautifulButton}"  Width="250" Padding="10" Margin="10" Content="Создать и выйти" Name="AddItemToCheckListAndExit" Click="AddItemToCheckListAndExit_Click"/>
            <Button Template="{StaticResource beautifulButton}" Width="250" Padding="10" Margin="10" Content="Создать и перейти к следующему" Name="AddItemToCheckListGoToAnother" Click="AddItemToCheckListGoToAnother_Click" />
            <Button Template="{StaticResource beautifulButton}"  Width="200" Padding="10" Margin="10" Content="Выйти без сохранения" Name="ExitFromAddingCheckListItem" Click="ExitFromAddingCheckListItem_Click"/>
        </StackPanel>
    </Grid>
</Page>

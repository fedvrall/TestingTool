<Page x:Class="Test_Management_System.Pages.PageCheckLists"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test_Management_System.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1150" Background="#353535" 
      Title="PageCheckLists">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Checklist}" Name="CheckListGrid" AutoGenerateColumns="False" Margin="10" Grid.Row="0" CanUserAddRows="False" IsReadOnly="True" CanUserResizeRows="False">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                MinHeight="50"
                                SnapsToDevicePixels="True">
                                    <ContentPresenter VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Width="200" Binding="{Binding CLSummary}" />
                <DataGridTextColumn Header="Проект" Width="150" Binding="{Binding Project.ProjectName}" />
                <DataGridTextColumn Header="Описание"  Width="350" Binding="{Binding CLDescription}" />
                <DataGridTemplateColumn Header="Процент выполнения">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ProgressBar Margin="10" Value="{Binding CLPersentageOfPassed}" Height="20" Minimum="0" Maximum="100" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Template="{StaticResource beautifulButton}" Margin="10" Content="Добавить пункты" Width="150" Command="{Binding DataContext.AddItemsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Template="{StaticResource beautifulButton}" Margin="10" Content="Удалить" Width="150" Command="{Binding DataContext.DeleteChecklistCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1">
            <Button Template="{StaticResource beautifulButton}" Padding="10" Content="Добавить новый чек-лист" Command="{Binding AddChecklistCommand}" Width="200" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" />

        </StackPanel>
    </Grid>

</Page>

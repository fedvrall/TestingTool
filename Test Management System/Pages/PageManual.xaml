            <TabItem Header="Чек-листы" Width="120">
                <!--<WebBrowser  Name="browser"/>-->

                <!--<FlowDocumentReader Name="reader"/>-->
                <!--<DocumentViewer Name="docCL"/>-->
                <RichTextBox Margin="10" Name="CLDocs"/>
            </TabItem>

            <TabItem Header="Тест-сьюты" Width="120">
                <RichTextBox Margin="10" Name="TSDocs"/>
            </TabItem>

            <TabItem Header="Тест-кейсы" Width="120">
                <RichTextBox Margin="10"/>
            </TabItem>

            <TabItem Header="Баг-репорты" Width="120">
                <RichTextBox Margin="10"/>
            </TabItem>
        </TabControl>
        <!--<WebBrowser Margin="10" Source="https://vladislaveremeev.gitbook.io/qa_bible/testovaya-documentaciya-i-artefacty-test-deliverablestest-artifacts/"/>-->

